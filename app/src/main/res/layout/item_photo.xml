<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/imgAvatar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            app:layout_constraintStart_toEndOf="@+id/imgAvatar"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imgAvatar"
            app:layout_constraintBottom_toBottomOf="@+id/imgAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <com.unsplash.photo.ui.widget.CoverImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            android:id="@+id/imgPhoto"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            app:civ_shadow_position="bottom"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@+id/imgAvatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
            android:text="16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLike"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:textAllCaps="false"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/imgPhoto"
            app:icon="@drawable/ic_favorite_grey_500_24dp"
            app:iconGravity="textStart"
            app:iconSize="18sp"
            app:iconTint="@color/colorGray"
            android:textColor="@color/colorGray"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>

    <com.google.android.material.button.MaterialButton
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAdd"
            app:layout_constraintStart_toEndOf="@+id/btnLike"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/btnLike"
            app:layout_constraintBottom_toBottomOf="@+id/btnLike"
            app:icon="@drawable/ic_add_grey_600_24dp"
            app:iconSize="18sp"
            app:iconTint="@color/colorGray"
            android:textColor="@color/colorGray"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"/>

    <com.google.android.material.button.MaterialButton
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnDownload"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/btnAdd"
            app:layout_constraintBottom_toBottomOf="@+id/btnAdd"
            app:icon="@drawable/ic_file_download_grey_600_24dp"
            app:iconSize="18sp"
            app:iconTint="@color/colorGray"
            android:textColor="@color/colorGray"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"/>

    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/progressLike"
            app:layout_constraintStart_toStartOf="@+id/btnLike"
            app:layout_constraintEnd_toEndOf="@+id/btnLike"
            app:layout_constraintTop_toTopOf="@+id/btnLike"
            app:layout_constraintBottom_toBottomOf="@+id/btnLike"
            android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>